<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:100,300' rel='stylesheet' type='text/css'>
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "College Football Recruiting" %></title>
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "vendor", "all" %>
  </head>

  <body>
    <header class="no-height">
      <h1>THE CLASS</h1><h2>Division I college football recruiting</h2>
      <div class="master-toolbar">
        <span class="select">
          <select id="year" class="js-year">
            <option value="">2002-2015</option>
            <% years.each do |year| %>
            <option value="<%= year %>"><%= year %></option>
            <% end %>
          </select>
        </span>
        <ul class="tabs js-hard-tabs">
          <li class="tab"><a href="counties.html" class="<%= 'selected' if current_page.path != 'recruits.html' %>" data-container-id="counties">Counties</a></li
          ><li class="tab"><a href="recruits.html" class="<%= 'selected' if current_page.path == 'recruits.html' %>" data-container-id="recruits">Recruits</a></li>
        </ul>
      </div>
    </header>
    <%= yield %>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-7881178-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
    <footer class="no-height">
      Copyright &copy; <%= Time.now.year %> <a href="http://labratrevenge.com">Justin Palmer</a>.  Sourced from rivals.com, US Census Bureau.
    </footer>
  </body>
</html>
